<Window x:Class="RoomReservationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="900
        ">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="538*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="540*"/>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="274*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="tbSettingText" Grid.ColumnSpan="4" Margin="-11,-20,9.6,48.2" Grid.RowSpan="2">
            Initial text contents of the TextBox.
        </TextBox>
        <!--<Button Content="Go" Grid.Column="1" HorizontalAlignment="Left" Margin="0.2,122,0,0" VerticalAlignment="Top" Width="75" Click="GoButton_click" Grid.ColumnSpan="2"/>-->
        <ListBox HorizontalAlignment="Left" Height="65" Margin="107.8,9.8,0,0" VerticalAlignment="Top" Width="96" Grid.Row="1" Grid.Column="3"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="385,261.8,0,0" VerticalAlignment="Top" Grid.Row="1" Height="15" Width="71" RenderTransformOrigin="1.143,2.908" Grid.Column="1"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="385,241.8,0,0" VerticalAlignment="Top" Grid.Row="1" Height="15" Width="71" Grid.Column="1"/>
        <Button Content="Button" Grid.Column="3" HorizontalAlignment="Left" Margin="147.8,357.8,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Row="1" Height="20"/>
        <Menu x:Name="menu" Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="31" Margin="-1,-1,0,0" VerticalAlignment="Top" Width="893">
            <MenuItem Margin="10,5,0,0" Header="Room Manager" Height="20" >
                <MenuItem Header="New Account">
                </MenuItem>
            </MenuItem>
            <MenuItem Margin="700,5,0,0" Header="Exit" Height="20" Click="MenuItem_Click"></MenuItem>
        </Menu>
        <Label Content="Type" HorizontalAlignment="Left" Height="37" Margin="1,54.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
        <Label Content="Capacity" HorizontalAlignment="Left" Height="37" Margin="1,22.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
        <Label Content="Price" HorizontalAlignment="Left" Height="37" Margin="1,91.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="114,25.8,0,0" Grid.Row="1" TextWrapping="Wrap" Text="23" VerticalAlignment="Top" Width="82" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="114,128.8,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="82" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="114,91.8,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="82" Grid.Column="1"/>
        <ListBox HorizontalAlignment="Left" Height="33" Margin="119,58.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="77" Grid.Column="1"/>
        <Label Content="Time" HorizontalAlignment="Left" Height="37" Margin="1,133.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
        <Label Content="Location" HorizontalAlignment="Left" Height="37" Margin="1,175.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
        <!--<Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="0.2,71,0,0" VerticalAlignment="Top" Width="75" Click="GoButton_click" Grid.ColumnSpan="2"/>-->

    </Grid>
</Window>
