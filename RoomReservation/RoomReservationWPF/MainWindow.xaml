<Window x:Class="RoomReservationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="900
        ">
    <TabControl SelectionChanged="TabControl_SelectionChanged">
        <TabItem x:Name="bookTab" Header="Book a room">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="31*"/>
                    <RowDefinition Height="538*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="540*"/>
                    <ColumnDefinition Width="79*"/>
                    <ColumnDefinition Width="274*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="searchBtn" Content="Search" Grid.Column="3" HorizontalAlignment="Left" Margin="147.8,357.8,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Row="1" Height="20"/>

                <Label Content="Type" HorizontalAlignment="Left" Height="37" Margin="22,85,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
                <Label Content="Capacity" HorizontalAlignment="Left" Height="37" Margin="22,53,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
                <Label Content="Price" HorizontalAlignment="Left" Height="37" Margin="22,122,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
                <Label Content="Time" HorizontalAlignment="Left" Height="37" Margin="22,164,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
                <Label Content="Location" HorizontalAlignment="Left" Height="37" Margin="22,206,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Grid.Column="1"/>

                <ComboBox x:Name="CapacityRangeBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="144,58,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
                <ComboBox x:Name="TypeBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="144,90,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.15,0.227"/>
                <ComboBox x:Name="PriceRangeBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="144,127,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.104,0"/>
                <ComboBox x:Name="TimeRangeBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="144,164,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
                <ComboBox x:Name="LocationBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="144,206,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>
                <Label Content="Room Property" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="22,10,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.303,-0.904"/>
                <Label Content="Value" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="144,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                <Label Content="Priority" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
                <ComboBox x:Name="capacityPriority" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,58,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Tag="1" IsSelected="True">1</ComboBoxItem>
                    <ComboBoxItem Tag="2">2</ComboBoxItem>
                    <ComboBoxItem Tag="3">3</ComboBoxItem>
                    <ComboBoxItem Tag="4">4</ComboBoxItem>
                    <ComboBoxItem Tag="5">5</ComboBoxItem>
                    <ComboBoxItem Tag="6">6</ComboBoxItem>
                    <ComboBoxItem Tag="7">7</ComboBoxItem>
                </ComboBox>
                <ComboBox x:Name="typePriority" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,90,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Tag="1" IsSelected="True">1</ComboBoxItem>
                    <ComboBoxItem Tag="2">2</ComboBoxItem>
                    <ComboBoxItem Tag="3">3</ComboBoxItem>
                    <ComboBoxItem Tag="4">4</ComboBoxItem>
                    <ComboBoxItem Tag="5">5</ComboBoxItem>
                    <ComboBoxItem Tag="6">6</ComboBoxItem>
                    <ComboBoxItem Tag="7">7</ComboBoxItem>
                </ComboBox>
                <ComboBox x:Name="pricePriority" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,127,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Tag="1" IsSelected="True">1</ComboBoxItem>
                    <ComboBoxItem Tag="2">2</ComboBoxItem>
                    <ComboBoxItem Tag="3">3</ComboBoxItem>
                    <ComboBoxItem Tag="4">4</ComboBoxItem>
                    <ComboBoxItem Tag="5">5</ComboBoxItem>
                    <ComboBoxItem Tag="6">6</ComboBoxItem>
                    <ComboBoxItem Tag="7">7</ComboBoxItem>
                </ComboBox>
                <ComboBox x:Name="timePriority" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,164,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Tag="1" IsSelected="True">1</ComboBoxItem>
                    <ComboBoxItem Tag="2">2</ComboBoxItem>
                    <ComboBoxItem Tag="3">3</ComboBoxItem>
                    <ComboBoxItem Tag="4">4</ComboBoxItem>
                    <ComboBoxItem Tag="5">5</ComboBoxItem>
                    <ComboBoxItem Tag="6">6</ComboBoxItem>
                    <ComboBoxItem Tag="7">7</ComboBoxItem>
                </ComboBox>
                <ComboBox x:Name="locationPriority" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="310,206,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Tag="1" IsSelected="True">1</ComboBoxItem>
                    <ComboBoxItem Tag="2">2</ComboBoxItem>
                    <ComboBoxItem Tag="3">3</ComboBoxItem>
                    <ComboBoxItem Tag="4">4</ComboBoxItem>
                    <ComboBoxItem Tag="5">5</ComboBoxItem>
                    <ComboBoxItem Tag="6">6</ComboBoxItem>
                    <ComboBoxItem Tag="7">7</ComboBoxItem>
                </ComboBox>



                <!--<Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="0.2,71,0,0" VerticalAlignment="Top" Width="75" Click="GoButton_click" Grid.ColumnSpan="2"/>-->

            </Grid>
        </TabItem>
        <TabItem x:Name="registerTab" Header="Register">
            <Grid>
                <Label x:Name="usernameLabel" Content="Username:" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.75,-0.173"/>
                <Label x:Name="passwordlabel" Content="Password:" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="userNameBox"  Text="" HorizontalAlignment="Left" Height="23" Margin="118,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="passwordBox" Text="" HorizontalAlignment="Left" Height="23" Margin="118,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Button x:Name="Lo" Content="Button" HorizontalAlignment="Left" Margin="60,164,0,0" VerticalAlignment="Top" Width="76"/>


            </Grid>
        </TabItem>
        <TabItem x:Name="createRoomTab" Header="Create a room">
            <CheckBox x:Name="checkBox2" Content="CheckBox" Height="100" Width="100"/>
        </TabItem>



    </TabControl>

</Window>
